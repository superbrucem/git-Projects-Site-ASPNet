@model OttawaOpalShop.Models.ShoppingCart
@{
    ViewData["Title"] = "Checkout";
}

<div class="container cart-page-container">
    <h1 class="mb-4">CHECKOUT</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">ORDER SUMMARY</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>PRODUCT</th>
                                    <th>PRICE</th>
                                    <th>QUANTITY</th>
                                    <th>TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="@item.ImageColor me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <span class="@(item.IsDarkText ? "text-dark" : "text-white")" style="font-size: 0.7rem;">@item.ImageText</span>
                                                </div>
                                                <div>@item.ProductName</div>
                                            </div>
                                        </td>
                                        <td>$@item.Price.ToString("0.00")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.Total.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>SUBTOTAL:</strong></td>
                                    <td><strong>$@Model.Total.ToString("0.00")</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>SHIPPING:</strong></td>
                                    <td><strong>FREE</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                                    <td><strong id="order-total">$@Model.Total.ToString("0.00")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">PAYMENT</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6>PAYMENT METHOD</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" checked>
                            <label class="form-check-label" for="paypal">
                                <i class="fab fa-paypal me-2"></i> PayPal
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-info mb-3 text-center">
                        <i class="fab fa-paypal me-2"></i> Complete your purchase securely with PayPal
                    </div>

                    <form asp-action="ProcessPayment" method="post" id="checkout-form">
                        <!-- Customer Information -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">CUSTOMER INFORMATION</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">FIRST NAME</label>
                                        <input type="text" class="form-control" name="FirstName" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">LAST NAME</label>
                                        <input type="text" class="form-control" name="LastName" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">EMAIL</label>
                                    <input type="email" class="form-control" name="Email" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">PHONE</label>
                                    <input type="tel" class="form-control" name="Phone">
                                </div>
                            </div>
                        </div>

                        <!-- Payment Information -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">PAYMENT METHOD</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="radio" name="PaymentMethod" id="paypal" value="PayPal" checked>
                                    <label class="form-check-label" for="paypal">
                                        <i class="fab fa-paypal me-2"></i> PayPal
                                    </label>
                                    <p class="text-muted small mt-1">You will be redirected to PayPal to complete your payment after placing your order.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">ORDER SUMMARY</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span>$@Model.Total.ToString("0.00")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping:</span>
                                    <span>FREE</span>
                                </div>
                                <div class="d-flex justify-content-between fw-bold">
                                    <span>Total:</span>
                                    <span>$@Model.Total.ToString("0.00")</span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fab fa-paypal me-2"></i> PLACE ORDER ($@Model.Total.ToString("0.00"))
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">BACK TO CART</a>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <small class="text-muted">By placing your order, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple form processing
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('checkout-form');

            form.addEventListener('submit', function(event) {
                // Show processing message
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> PROCESSING ORDER...';

                // Allow form submission
                return true;
            });
        });
    </script>
}
