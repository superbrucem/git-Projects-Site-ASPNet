@model OttawaOpalShop.Models.ShoppingCart
@{
    ViewData["Title"] = "Checkout";
}

<div class="container cart-page-container">
    <h1 class="mb-4">CHECKOUT</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">ORDER SUMMARY</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>PRODUCT</th>
                                    <th>PRICE</th>
                                    <th>QUANTITY</th>
                                    <th>TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="@item.ImageColor me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <span class="@(item.IsDarkText ? "text-dark" : "text-white")" style="font-size: 0.7rem;">@item.ImageText</span>
                                                </div>
                                                <div>@item.ProductName</div>
                                            </div>
                                        </td>
                                        <td>$@item.Price.ToString("0.00")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.Total.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>SUBTOTAL:</strong></td>
                                    <td><strong>$@Model.Total.ToString("0.00")</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>SHIPPING:</strong></td>
                                    <td><strong>FREE</strong></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                                    <td><strong id="order-total">$@Model.Total.ToString("0.00")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">PAYMENT</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6>PAYMENT METHOD</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" checked>
                            <label class="form-check-label" for="paypal">
                                <i class="fab fa-paypal me-2"></i> PayPal
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-info mb-3 text-center">
                        <i class="fab fa-paypal me-2"></i> Complete your purchase securely with PayPal
                    </div>

                    <form asp-action="ProcessPayment" method="post" id="checkout-form">
                        <!-- Customer Information -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">CUSTOMER INFORMATION</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">FIRST NAME</label>
                                        <input type="text" class="form-control" name="FirstName" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">LAST NAME</label>
                                        <input type="text" class="form-control" name="LastName" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">EMAIL</label>
                                    <input type="email" class="form-control" name="Email" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">PHONE</label>
                                    <input type="tel" class="form-control" name="Phone">
                                </div>
                            </div>
                        </div>

                        <!-- Payment Information -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">PAYMENT METHOD</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="radio" name="PaymentMethod" id="paypal" value="PayPal" checked>
                                    <label class="form-check-label" for="paypal">
                                        <i class="fab fa-paypal me-2"></i> PayPal
                                    </label>
                                    <p class="text-muted small mt-1">You will be redirected to PayPal to complete your payment.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">ORDER SUMMARY</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span>$@Model.Total.ToString("0.00")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping:</span>
                                    <span>FREE</span>
                                </div>
                                <div class="d-flex justify-content-between fw-bold">
                                    <span>Total:</span>
                                    <span id="paypal-total">$@Model.Total.ToString("0.00")</span>
                                </div>
                            </div>
                        </div>

                        <!-- PayPal Button Container -->
                        <div id="paypal-button-container" class="mb-3"></div>

                        <!-- Back to Cart Button -->
                        <div class="d-grid">
                            <a asp-action="Index" class="btn btn-outline-secondary">BACK TO CART</a>
                        </div>

                        <!-- Hidden fields for form submission -->
                        <input type="hidden" name="PaymentMethod" value="PayPal">
                    </form>

                    <div class="mt-3 text-center">
                        <small class="text-muted">By placing your order, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- PayPal SDK -->
    <script src="https://www.paypal.com/sdk/js?client-id=test&currency=USD"></script>

    <script>
        // Initialize PayPal button
        document.addEventListener('DOMContentLoaded', function() {
            // Get the total amount from the page
            const totalElement = document.getElementById('paypal-total');
            const total = totalElement ? totalElement.textContent.replace('$', '') : '0.00';

            console.log('Initializing PayPal with amount:', total);

            // Initialize PayPal button
            paypal.Buttons({
                style: {
                    shape: 'rect',
                    color: 'blue',
                    layout: 'vertical',
                    label: 'paypal'
                },

                // Create order
                createOrder: function(data, actions) {
                    return actions.order.create({
                        purchase_units: [{
                            amount: {
                                value: total,
                                currency_code: 'USD'
                            },
                            description: 'Ottawa Opal Shop Purchase'
                        }]
                    });
                },

                // On approval
                onApprove: function(data, actions) {
                    // Show loading message
                    const buttonContainer = document.getElementById('paypal-button-container');
                    buttonContainer.innerHTML = '<div class="alert alert-info text-center"><i class="fas fa-spinner fa-spin me-2"></i> Processing your payment...</div>';

                    return actions.order.capture().then(function(details) {
                        console.log('Transaction completed by ' + details.payer.name.given_name);

                        // Add transaction ID to form
                        const form = document.getElementById('checkout-form');
                        const transactionIdInput = document.createElement('input');
                        transactionIdInput.type = 'hidden';
                        transactionIdInput.name = 'TransactionId';
                        transactionIdInput.value = details.id;
                        form.appendChild(transactionIdInput);

                        // Update message
                        buttonContainer.innerHTML = '<div class="alert alert-success text-center"><i class="fas fa-check-circle me-2"></i> Payment successful! Completing your order...</div>';

                        // Submit form to complete order
                        setTimeout(function() {
                            form.submit();
                        }, 1500);
                    });
                },

                // On error
                onError: function(err) {
                    console.error('PayPal error:', err);
                    alert('There was an error processing your payment. Please try again or contact customer support.');
                }
            }).render('#paypal-button-container');
        });
    </script>
}
