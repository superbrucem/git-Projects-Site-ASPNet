@model List<(string Text, string Url)>

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">HOME</a></li>
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i == Model.Count - 1)
            {
                <li class="breadcrumb-item active" aria-current="page">@Model[i].Text</li>
            }
            else
            {
                <li class="breadcrumb-item"><a href="@Model[i].Url">@Model[i].Text</a></li>
            }
        }
    </ol>
</nav>
