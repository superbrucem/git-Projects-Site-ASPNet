@model OttawaOpalShop.Models.ProductViewModel
@{
    ViewData["Title"] = "Search Results";
}

<div class="container-fluid">
    <div class="row mb-4" style="width: 90%; margin: 0 auto;">
        <div class="col-12">
            <h2>SEARCH RESULTS FOR: "@Model.SearchQuery"</h2>
            <p>Found @Model.TotalItems products matching your search.</p>
        </div>
    </div>
    
    <partial name="_ProductGrid" model="Model" />
</div>
