@model OttawaOpalShop.Models.ProductViewModel
@{
    ViewData["Title"] = "Search Results";
    var breadcrumbItems = new List<(string Text, string Url)>
    {
        ("SEARCH", "#")
    };
}

<div class="card mb-4">
    <div class="card-body">
        <partial name="_Breadcrumb" model="breadcrumbItems" />
        <h1 class="display-4 mb-4 text-center">SEARCH RESULTS</h1>
        <p class="lead text-center mb-5">FOUND @Model.TotalItems PRODUCTS MATCHING: "@Model.SearchQuery"</p>

        <partial name="_ProductGrid" model="Model" />
    </div>
</div>
